class Libro:
    def _init_(self, titulo, autor, paginas):
        self.titulo = titulo
        self.autor = autor
        self.paginas = paginas

    def mostrar_informacion(self):
        print(f"Título: {self.titulo}")
        print(f"Autor: {self.autor}")
        print(f"Número de páginas: {self.paginas}")

    def actualizar_paginas(self, nuevas_paginas):
        self.paginas = nuevas_paginas
        print("Número de páginas actualizado.")

# Ejemplo de uso:
libro1 = Libro("Cien años de soledad", "Gabriel García Márquez", 417)
libro1.mostrar_informacion()

libro1.actualizar_paginas(420)
libro1.mostrar_informacion()
